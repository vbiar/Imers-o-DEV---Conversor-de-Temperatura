}

select {
  font-family: "Roboto Mono", monospace;
  margin: 10px;
  padding: 6px;
  border-radius: 5px;
  width: 188px;
}

label {
  color: #d19b11;
}

button {
  margin-top: 25px;
  padding: 4px 8px;
  border-radius: 10px;
